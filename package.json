{
  "name": "reading-page-poc",
  "version": "0.1.0",
  "private": true,
  "homepage": "https://rubysih.github.io/reading-page-poc",
  "dependencies": {
    "@ahooksjs/use-request": "^2.8.15",
    "axios": "^0.27.2",
    "babel-plugin-transform-decorators-legacy": "^1.3.5",
    "eslint": "^8.19.0",
    "gh-pages": "^4.0.0",
    "mobx": "^6.6.1",
    "prettier": "^2.7.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-markdown": "^8.0.3",
    "react-scripts": "5.0.1",
    "remark-gfm": "^3.0.1"
  },
  "scripts": {
    "start": "react-app-rewired start",
    "build": "react-app-rewired build",
    "dev": "react-app-rewired start",
    "server": "node server/server.js",
    "eject": "react-scripts eject",
    "format": "prettier --write \"{server,scripts,src}/**/*.js\"",
    "lint": "eslint \"{server,scripts,src}/**/*.js\"",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build"
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "prettier": {
    "arrowParens": "avoid",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none",
    "overrides": [
      {
        "files": [
          "*.html"
        ],
        "options": {
          "printWidth": 180
        }
      }
    ]
  },
  "devDependencies": {
    "@babel/plugin-proposal-decorators": "^7.18.6",
    "babel-plugin-import": "^1.13.5",
    "customize-cra": "^1.0.0",
    "react-app-rewired": "^2.2.1"
  }
}
